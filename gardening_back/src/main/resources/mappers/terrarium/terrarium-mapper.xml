<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ggirick.gardening_back.mappers.terrarium.TerrariumMapper">

    <insert id="insertTerrarium" parameterType="com.ggirick.gardening_back.dto.terrarium.TerrariumDTO">
        <selectKey order="BEFORE" keyProperty="id" resultType="int">
            select terrarium_seq.nextval from dual
        </selectKey>
        insert into terrarium values(#{id},#{userId},#{title},#{description},#{isPublic},#{width},#{height},default,default)
    </insert>

    <select id="getTerrariumById" resultType="com.ggirick.gardening_back.dto.terrarium.TerrariumDTO">
        select * from terrarium where user_uid = #{userId}
    </select>


</mapper>