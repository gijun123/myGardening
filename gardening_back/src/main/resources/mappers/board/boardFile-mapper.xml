<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ggirick.gardening_back.mappers.board.BoardFileMapper">
    <!-- 게시글 파일 목록 조회 -->
    <select id="getFileListByBoardId" resultType="com.ggirick.gardening_back.dto.board.BoardFileDTO">
        SELECT *
        FROM board_file
        WHERE board_id = #{boardId}
    </select>

    <!-- 게시글 개별 파일 조회 -->
    <select id="getFileById" resultType="com.ggirick.gardening_back.dto.board.BoardFileDTO">
        SELECT *
        FROM board_file
        WHERE id = #{id}
    </select>

    <!-- 게시글 파일 등록 -->
    <insert id="insert">
        INSERT INTO board_file(id, ori_name, sys_name, url, board_id)
        VALUES (board_file_seq.nextval, #{oriName}, #{sysName}, #{url}, #{boardId})
    </insert>

    <!-- 게시글 파일 개별 삭제 -->
    <delete id="deleteFile">
        DELETE FROM board_file WHERE id = #{id}
    </delete>

    <!-- 게시글 파일 전체 삭제 -->
    <delete id="deleteFileByBoardId">
        DELETE FROM board_file WHERE board_id = #{boardId}
    </delete>
</mapper>